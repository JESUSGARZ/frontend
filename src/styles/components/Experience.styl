.Experience
  grid-area Experience

.Experience-wrapper
    display: grid
    grid-template-columns: repeat( auto-fit, minmax(250px, 1fr))
    grid-gap: 5px

.Project-article
    display: grid
    
.Project-title
    grid-row: 1 / 2
    
.Project-description
    text-overflow: ellipsis
    text-align: center
    grid-row: 2 / 3

.Project-link
    grid-row: 4 / 5
    font-size 1.5em

.Project-link a
    margin: 5px

.Project-stack
    grid-row: 5 / 6
    
.Project-title,
.Project-description,
.Project-link,
.Project-stack
    place-self: center
